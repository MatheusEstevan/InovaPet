@model IEnumerable<InovaPet.Models.Servico>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Todos os serviços</h2>

<p>
    <a asp-action="Create">Adicionar Servico</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFuncionarioNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPetNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFuncionarioNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPetNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdServico">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdServico">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.IdServico">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
